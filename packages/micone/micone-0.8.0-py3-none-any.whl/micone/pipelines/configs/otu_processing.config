// -*- mode: groovy -*-

params {
    otu_processing {
        // export {
        //     'biom2tsv' {}
        // }
        transform {
            'group' {
                tax_levels = ['Phylum', 'Class', 'Order', 'Family', 'Genus', 'Species']
            }
            // NOTE: Set to "False" to disable filtering
            // NOTE: Set axis to "None" to disable normalization
            'normalize' {
                axis = "sample"
                count_thres = 500
                prevalence_thres = 0.05
                abundance_thres = 0.01
                rm_sparse_obs = "True"
                rm_sparse_samples = "True"
            }
        }
    }
}
