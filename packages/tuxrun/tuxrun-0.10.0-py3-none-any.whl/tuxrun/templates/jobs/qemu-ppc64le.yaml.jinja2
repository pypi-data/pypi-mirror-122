{% extends 'base-qemu.yaml.jinja2' %}

{% block context %}
context:
  arch: "ppc64le"
  cpu: "POWER8"
  guestfs_interface: "scsi,index=1"
  machine: pseries
  no_kvm: true
  no_network: true
  extra_options:
  - "-smp 2"
{% endblock %}

{% set arch = "ppc64le" %}
{% set console = "hvc0" %}
{% set rootfs_dev = "/dev/sda" %}
{% set rootfs_arg = "-drive file={rootfs},format=raw,if=scsi,index=0" %}

