{% extends 'base-qemu.yaml.jinja2' %}

{% block context %}
context:
  arch: "riscv64"
  guestfs_interface: "virtio"
  no_kvm: true
  no_network: true
  extra_options:
  - "-smp 2"
{% endblock %}

{% set arch = "riscv64" %}
{% set console = "ttyS0" %}
{% set rootfs_dev = "/dev/vda" %}
{% set rootfs_arg = "-drive file={rootfs},format=raw,id=hd0 -device virtio-blk-device,drive=hd0" %}

{% set bios = bios|default("https://storage.tuxboot.com/riscv64/fw_jump.elf", true) %}
