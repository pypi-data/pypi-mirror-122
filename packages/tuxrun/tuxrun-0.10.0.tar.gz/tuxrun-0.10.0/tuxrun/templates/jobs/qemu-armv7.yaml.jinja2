{% extends 'base-qemu.yaml.jinja2' %}

{% block context %}
context:
  arch: "arm"
  cpu: "cortex-a15"
  guestfs_interface: "none"
  machine: "virt,gic-version=3"
  no_kvm: true
  no_network: true
  extra_options:
  - "-smp 2"
{% if tests %}
  - "-device virtio-blk-device,drive=lavatest"
{% endif %}
{% endblock %}

{% set arch = "armv7" %}
{% set console = "ttyAMA0" %}
{% set rootfs_dev = "/dev/vda" %}
{% set rootfs_arg = "-drive file={rootfs},if=none,format=raw,id=hd0 -device virtio-blk-device,drive=hd0" %}

