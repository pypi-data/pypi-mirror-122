FROM debian:bullseye
RUN apt-get update -q=2 \
    && apt-get install -q=2 \
        black \
        codespell \
        flake8 \
        flit \
        git \
        make \
        mkdocs \
        mypy \
        python3 \
        python3-pip \
        python3-pytest \
        python3-pytest-cov \
        python3-pytest-mock \
        python3-requests \
        python3-yaml \
    && true

